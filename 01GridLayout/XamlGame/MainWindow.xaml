<Window x:Class="XamlGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XamlGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <WrapPanel Margin="5" HorizontalAlignment="Center">
                <Label Content="Pontszám"/>
                <Label Content="px"/>
                <Label Content="Reakciódő"/>
                <Label Content="rx"/>
                <Label Content="Átlagos Reakciódő"/>
                <Label Content="árx"/>                
            </WrapPanel>
            <Button Content="Igen" Grid.Row="2"
                    Margin="5" Padding="10"
                    HorizontalAlignment="Left"/>
            <Button Content="Nem" Grid.Row="2"
                    Margin="5" Padding="10"
                    HorizontalAlignment="Center"/>
            <Button Content="Kezdés" Grid.Row="2"
                    Margin="5" Padding="10"
                    HorizontalAlignment="Right"/>

        </Grid>
        <ListBox Width="120">
                
        </ListBox>
    </Grid>
</Window>
