<Window x:Class="_03DockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03DockPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--utolso elem igy nem tolti ki a rendelkezesre allo helyet-->
        <DockPanel LastChildFill="False">             
            <Button Content="Egy gomb (bottom)" 
                    DockPanel.Dock="Bottom"/>
            <Button Content="Egy gomb (left)"
                    DockPanel.Dock="Left"/>
            <Button Content="Egy gomb (Top)"
                    DockPanel.Dock="Top"/>
            <Button Content="Egy gomb (Right)"
                    DockPanel.Dock="Right"/>
            
            <Button Content="Egy gomb" 
                    DockPanel.Dock="Top"/>
            <Button Content="Egy gomb" 
                    DockPanel.Dock="Left"/>
            <Button Content="Egy gomb" 
                    DockPanel.Dock="Bottom"/>
            <Button Content="Egy gomb" 
                    DockPanel.Dock="Bottom"/>

        </DockPanel>
    </Grid>
</Window>
